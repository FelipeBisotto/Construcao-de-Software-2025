{
  "name": "construcao-software-2025",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev:backend",
    "dev:backend": "npm --workspace apps/backend run dev",
    "dev:frontend": "npm --workspace apps/frontend run dev",
    "build": "npm run -ws build",
    "build:backend": "npm --workspace apps/backend run build",
    "build:frontend": "npm --workspace apps/frontend run build",
    "start:backend": "npm --workspace apps/backend run start",
    "test": "npm run -ws test",
    "test:backend": "npm --workspace apps/backend run test",
    "lint": "npm run -ws lint",
    "format": "npm run -ws format",
    "prisma:generate": "npm --workspace apps/backend run prisma:generate",
    "prisma:push": "npm --workspace apps/backend run prisma:push"
  },
  "engines": {
    "node": ">=20"
  }
}

